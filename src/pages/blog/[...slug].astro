---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Nav from '../../components/Nav.astro';
import Footer from '../../components/Footer.astro';
import { getCollection, render } from 'astro:content';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map((post) => ({
    params: { slug: post.id },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await render(post);

const basePath = import.meta.env.BASE_URL;

// Estimate reading time
const words = post.body?.split(/\s+/).length ?? 0;
const readingTime = Math.max(1, Math.ceil(words / 200));
---

<BaseLayout
  title={`${post.data.title} | Fernando Penna`}
  description={post.data.description}
  type="article"
  datePublished={post.data.date.toISOString()}
>
  <Nav />
  <main id="main-content" class="post-page">
    <article class="container">
      <header class="post-page__header fade-up">
        <a href={`${basePath}blog/`} class="post-page__back">&larr; All posts</a>
        <h1 class="post-page__title">{post.data.title}</h1>
        <div class="post-page__meta">
          <time datetime={post.data.date.toISOString()}>{post.data.date.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}</time>
          <span class="post-page__dot">&middot;</span>
          <span>{readingTime} min read</span>
        </div>
        {post.data.tags && (
          <div class="post-page__tags">
            {post.data.tags.map((tag: string) => (
              <span class="tag-sm">{tag}</span>
            ))}
          </div>
        )}
      </header>

      <div class="post-page__content prose fade-up">
        <Content />
      </div>

      <footer class="post-page__footer fade-up">
        <a href={`${basePath}blog/`} class="post-page__back">&larr; Back to all posts</a>
      </footer>
    </article>
  </main>
  <Footer />
</BaseLayout>

<style>
  .post-page {
    padding-top: 6rem;
    min-height: 100vh;
  }

  .post-page__header {
    margin-bottom: 3rem;
    padding-bottom: 2rem;
    border-bottom: 1px solid var(--border);
  }

  .post-page__back {
    font-family: var(--font-mono);
    font-size: 0.85rem;
    color: var(--accent);
    text-decoration: none;
    display: inline-block;
    margin-bottom: 1.5rem;
  }

  .post-page__back:hover {
    text-decoration: underline;
  }

  .post-page__title {
    font-family: var(--font-mono);
    font-size: clamp(1.5rem, 4vw, 2.25rem);
    color: var(--text);
    line-height: 1.3;
    margin-bottom: 1rem;
  }

  .post-page__meta {
    font-family: var(--font-mono);
    font-size: 0.85rem;
    color: var(--text-dim);
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-bottom: 1rem;
  }

  .post-page__dot {
    color: var(--border);
  }

  .post-page__tags {
    display: flex;
    gap: 0.4rem;
  }

  /* Prose styles for blog content */
  .prose :global(h1),
  .prose :global(h2),
  .prose :global(h3),
  .prose :global(h4) {
    font-family: var(--font-mono);
    color: var(--text);
    margin-top: 2em;
    margin-bottom: 0.75em;
  }

  .prose :global(h1) { font-size: 1.75rem; }
  .prose :global(h2) { font-size: 1.35rem; }
  .prose :global(h3) { font-size: 1.15rem; }

  .prose :global(p) {
    color: var(--text-dim);
    line-height: 1.8;
    margin-bottom: 1.25em;
  }

  .prose :global(a) {
    color: var(--accent);
    text-decoration: underline;
    text-underline-offset: 3px;
  }

  .prose :global(a:hover) {
    opacity: 0.8;
  }

  .prose :global(code) {
    font-family: var(--font-mono);
    font-size: 0.9em;
    background: var(--surface);
    padding: 0.15em 0.4em;
    border: 1px solid var(--border);
    color: var(--accent);
  }

  .prose :global(pre) {
    background: var(--surface);
    border: 1px solid var(--border);
    padding: 1.25rem;
    overflow-x: auto;
    margin-bottom: 1.5em;
  }

  .prose :global(pre code) {
    background: none;
    border: none;
    padding: 0;
    color: var(--text);
  }

  .prose :global(ul),
  .prose :global(ol) {
    color: var(--text-dim);
    padding-left: 1.5em;
    margin-bottom: 1.25em;
    line-height: 1.8;
  }

  .prose :global(li) {
    margin-bottom: 0.25em;
  }

  .prose :global(strong) {
    color: var(--text);
    font-weight: 600;
  }

  .prose :global(blockquote) {
    border-left: 2px solid var(--accent);
    padding-left: 1rem;
    margin: 1.5em 0;
    color: var(--text-dim);
    font-style: italic;
  }

  .prose :global(hr) {
    border: none;
    border-top: 1px solid var(--border);
    margin: 2em 0;
  }

  .post-page__footer {
    margin-top: 3rem;
    padding-top: 2rem;
    padding-bottom: 2rem;
    border-top: 1px solid var(--border);
  }

  .post-page__content {
    max-width: 720px;
  }
</style>
